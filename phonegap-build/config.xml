<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smartgo.bus" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SmartGo智能公交</name>
    <description>
        智能公交实时查询和出行规划平台，提供AI智能助手、实时公交查询、周边服务等功能
    </description>
    <author email="support@smartgo.com" href="https://smartgo.com">
        SmartGo Team
    </author>

    <content src="index.html" />

    <!-- 访问权限 -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- Android 平台配置 -->
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="34" />
    </platform>

    <!-- 通用配置 -->
    <preference name="Orientation" value="portrait" />

    <!-- 插件 -->
    <plugin name="cordova-plugin-whitelist" spec="^1.3.5" />
</widget>
